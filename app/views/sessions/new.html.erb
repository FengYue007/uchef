<h1>登入</h1>

<%= form_for(@user, url: sign_in_sessions_path) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email, placeholder: '請輸入登入信箱' %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, placeholder: '請輸入登入密碼' %>
  </div>

  
  <%= form.submit "登入" %>
<% end %>
